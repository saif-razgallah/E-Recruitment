<!-- Sign In modal -->

<div id="Simplemodal" class="modal">
    <div class="modalContent">
        <span id="closeBtn" onclick="closeModalSingIn()">&times;</span>
        <div class="header">
            <h3 style="text-align: center;">Se connecter</h3>
        </div>
        <form action="/login" method="POST">
          <div class="form-group" style="align-items: center;">
            <label style="font-weight: bold;" for="exampleInputEmail1" style="text-align: center;">Email: </label>
            <input  name="email" style="border-radius: 15px;font-weight: bold;" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="entrer votre email">
            
          </div>
          <div class="form-group">
            <label style="font-weight: bold;" for="exampleInputPassword1">Mot de passe</label>
            <input name="password" style="border-radius: 15px;font-weight: bold;" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
            
          </div>
          <button type="submit" class="btn btn-lg btn-primary" style="border-radius: 10px;background-color: rgb(201, 36,46);margin-left: 40%;">valider</button>
        </form>   
          
    </div>
  </div>